<h1>Lista de Productos</h1>

<div class="dashboard">
  {{#each products}}
  <div class="product-card" data-id="{{this._id}}">
    <div class="product-image-container">
      <img 
        class="product-image" 
        src="{{this.thumbnail}}" 
        alt="{{this.title}}" 
        onerror="this.src='/img/default-placeholder.png';" <!-- Imagen por defecto -->
      >
    </div>
    <h2 class="product-title">{{this.title}}</h2>
    <h3 class="product-price">Precio: ${{this.price}}</h3>
    <p class="product-description">{{this.description}}</p>
    <p class="product-category">Categor√≠a: {{this.category}}</p>
    <a class="details-btn btn" href="/products/{{this._id}}">Ver detalles</a>
    <button class="delete-btn btn" data-id="{{this._id}}">Eliminar</button>
    <button class="add-to-cart-btn btn" data-id="{{this._id}}">Agregar al carrito</button>

  </div>
  {{/each}}
</div>